  "version": 1,
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_20", "npm"],
      "nixOverlays": []
    },
    "build": {
      "cmds": ["npm install", "npm run build"]
    },
    "start": {
      "cmd": "node server.js"
    }
